@model IEnumerable<TTMS.Models.Work>

@{
    ViewBag.Title = "Tasks";
    Layout = "~/Views/Shared/_SupervisorLayout.cshtml";
}

<h2>Tasks</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<p>
    @Html.ActionLink("Tasks", "Tasks") | @Html.ActionLink("Events", "Events") | @Html.ActionLink("Projects", "Projects")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Priority)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.WorkTitle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.WorkDescr)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Deadline)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Assignedstudents)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model)
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Priority)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.WorkTitle)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.WorkDescr)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Deadline)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Status)
        </td>
        <td>
            @Html.ListBox("Id", new SelectList(item.Assignedstudents, "Id", "FirstName"))
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
            @Html.ActionLink("Edit Assignments", "Editassignments", new { id = item.ID }) |
            @Html.ActionLink("Details", "Details", new { id = item.ID }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.ID })
        </td>
    </tr>
}

</table>
